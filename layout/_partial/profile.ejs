<aside id="profile">
  <div class="inner profile-inner">
    <div class="base-info profile-block">
      <a href="/"><img id="avatar" src="<%= ( theme.gravatar ? gravatar(theme.email) : url_for(config.avatar)) %>"></a>
      <h2 id="name"><%= config.author %></h2>
      <h3 id="title"><%= config.author_title %></h3>
      <% if(config.location) { %><span id="location"><i class="fa fa-map-marker"></i><%= config.location %></span><% } %>
      <% if(config.follow) { %><a id="follow" href="<%= config.follow %>"><%= __('profile.follow') %></a><% } %>
    </div>
    <!--
    <div class="article-info profile-block">
      <div class="article-info-block">
        <%= site.posts.length %>
        <a href="/"><span><%= (site.posts.length > 1 ? __('profile.posts') : __('profile.post')) %></span></a>
      </div>
      <div class="article-info-block">
        <%= site.tags.length %>
        <a href="<%- url_for('tags/') %>"><span><%= (site.tags.length > 1 ? __('profile.tags') : __('profile.tag')) %></span></a>
      </div>
    </div>
    -->
    <% if(theme.contacts) { %>
    <div class="contact-info profile-block">
      <table class="contact-list">
        <tr>
          <% for(var i in theme.contacts) { %>
            <td><a href="<%- url_for(theme.contacts[i]) %>" target="_blank" title="<% if( i == 'youtube-play' ){ %>youtube<% } else if ( i == 'apple' ){ %>itunes<% } else { %><%= i %><% } %>"><i class="fa fa-<%= i %>"></i></a></td>
          <% } %>
        </tr>
      </table>
    </div>
    <% } %>
    <% if(theme.about) { %>
    <div class="article-info profile-block bio">
      <h2>About</h2>
      <p><%- theme.about %></p>
    </div>
    <% } %>
  </div>
</aside>
